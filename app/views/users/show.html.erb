<div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
        <div class="wrapper col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
          <h4>ユーザー詳細</h4>
          <%= link_to 'ユーザ一覧へ戻る', users_path, class: 'btn btn-default' %>

          <div class="row" id="row1">
            <div class="col" id="col5">
              <h4><strong><%= @user.name %></strong></h4>
              <%= @user.email %><br>
              <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post' %>

            </div>
            <div class="col" id="col6">
              <p><%= profile_img(@user) %></p><br>
              <% if @user != current_user && signed_in? %>
                <%= render 'follow_form', user: @user %>
              <% end %>
            </div>
          </div>
        </div>

    <div class="row">
      <div class="col" id="col3">
        <h4><strong>フォローユーザ一覧</strong></h4>
          <% @followed_users.each do |followed_user| %>
          <div class="row" id="row3" >
            <div class="col" id="col5">
              <%= link_to user_path(followed_user.id) do %>
                <h4><strong><%= followed_user.name %></strong></h4>
              <% end %>
              <!-- <% unless followed_user == current_user %>
                <%= render 'follow_form', user: followed_user %>
              <% end %> -->
            </div>
            <div class="col" id="col6">
              <p class="img2"><%= profile_img(followed_user) %></p>
            </div>
          </div>
          <% end %>
      </div>

      <div class="col" id="col4">
        <h4><strong>フォロワー一覧</strong></h4>
        <% @followers.each do |follower| %>
        <div class="row" id="row3" >
          <div class="col" id="col5">
            <%= link_to user_path(follower.id) do %>
              <h4><strong><%= follower.name %></strong></h4>
            <% end %>
            <!-- <% unless follower == current_user %>
              <%= render 'follow_form', user: follower %>
            <% end %> -->
          </div>
          <div class="col" id="col6">
            <p class="img2"><%= profile_img(follower) %></p>
          </div>
        </div>
        <% end %>
      </div>
    </div>

</div>
