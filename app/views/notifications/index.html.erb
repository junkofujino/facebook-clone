<div class="container">
 <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

  <h2>お知らせ</h2>
    <% @notifications.each do |notification| %>
      <% if notification.read == true %>
        <div class="row">
         <div class="col" id="col7">
           <p><%= profile_img(notification.comment.user,"topics") if profile_img(notification.comment.user,"topics") %></p>
         </div>

         <div class="col" id="col8">
           既読
             <p>
               <%= notification.comment.user.try(:name) %>さんがあなたの投稿 (<%= link_to "#{notification.comment.topic.content}", topic_path(notification.comment.topic, notification_id: notification.id) %>) にコメントしました。
             </p>
             <p><%= notification.created_at %></p>
          </div>
         </div>
        <% else %>
          <div class="row" id="aliceblue">
           <div class="col" id="col7">
             <p class="img3"><%= profile_img(notification.comment.user,"topics") if profile_img(notification.comment.user,"topics") %></p>
           </div>

           <div class="col" id="col8">
             未読
               <p>
                 <%= notification.comment.user.try(:name) %>さんがあなたの投稿 (<%= link_to "#{notification.comment.topic.content}", topic_path(notification.comment.topic, notification_id: notification.id) %>) にコメントしました。
               </p>
               <p><%= notification.created_at %></p>
            </div>
           </div>
         <% end %>
    <% end %>

 </div>
</div>
